<html><head>
  <%= stylesheet_link_tag "style", :media => 'all' %>
  <%= javascript_include_tag :all %>
  <title>Orbitel CRM</title>
</head><body>

<%= render :partial => 'users/user_bar' %>
<%= render :partial => 'shared/menu' if logged_in? %>

<% if flash && flash[:error] %>
  <div class="error"><%= h flash[:error] %></div>
<% end %>

<% if flash && flash[:notice] %>
  <div id="notices" class="notice"><%= h flash[:notice] %></div>
  <%= javascript_tag(visual_effect(:highlight, "notices", :duration => 0.75)) %>
<% end %>

<div class="content">
<%= yield %>
</div>

